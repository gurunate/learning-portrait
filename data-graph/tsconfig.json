        "esModuleInterop": true,
        "lib": [
            "es2020"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "dist",
        "resolveJsonModule": true,
        "rootDirs": [
            "src"
        ],
        "target": "es2020",
        "types": [
            "node"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    }
